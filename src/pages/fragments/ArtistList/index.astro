---
import ArtistCard from '@components/ArtistCard.astro';
import artistsData from '@data/artistDetails.json';

// Assuming artistDetails.json has a key "allArtists" which is an array of artist objects
const allArtists = artistsData.allArtists || [];
---

<div class="container mx-auto px-4 py-8">
  <div class="favorite-artists">
    {/* Changed class name for clarity, similar to popular-tv */}
    <h2 class="uppercase tracking-wider text-orange-500 text-lg font-semibold">Favorite Artists</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-8">
      {allArtists.map((artist) => <ArtistCard artist={artist} />)}
    </div>
  </div>

  {
    /*
    If there's a need for multiple sections of artists in the future (e.g., by genre, or different lists),
    additional blocks like the one above can be added here, similar to how TvList handles
    regularShows and spanishShows. For now, only one list "Favorite Artists" is implemented.
    Example:
    <div class="another-artist-section mt-16">
      <h2 class="uppercase tracking-wider text-orange-500 text-lg font-semibold">
        Another Category of Artists
      </h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-8">
        {anotherArtistList.map(artist => <ArtistCard artist={artist} />)}
      </div>
    </div>
  */
  }
</div>
