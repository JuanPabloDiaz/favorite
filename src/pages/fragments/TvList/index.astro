---
import TvShowCard from '@components/TvShowCard.astro';
import tvShowDetails from '@data/tvShowDetails.json';

// Using pre-fetched TV show details from our local JSON
const myFavTvShowsDetails = tvShowDetails.regular;
const myFavSpanishTvShowsDetails = tvShowDetails.spanish;

// Note: We'll add popular and top-rated shows to the fetch script later if needed
const popularShows = [];
const topRated = [];
---

<main class="container mx-auto px-4 pt-16">
  <article class="popular-tv">
    <h2 class="text-lg font-semibold uppercase tracking-wider text-orange-500">
      Juan's Favorite TV Shows
    </h2>
    <div class="grid grid-cols-1 gap-8 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-5">
      {myFavTvShowsDetails.map((show) => <TvShowCard show={show} />)}
    </div>
  </article>
  <article class="popular-tv">
    <h2 class="text-lg font-semibold uppercase tracking-wider text-orange-500">
      Juan's Favorite TV Shows (Spanish)
    </h2>
    <div class="grid grid-cols-1 gap-8 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-5">
      {myFavSpanishTvShowsDetails.map((show) => <TvShowCard show={show} />)}
    </div>
  </article>
  <div class="container mx-auto px-4 pt-16">
    <div class="popular-tv">
      <h2 class="text-lg font-semibold uppercase tracking-wider text-orange-500">Popular Shows</h2>
      <div class="grid grid-cols-1 gap-8 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-5">
        {popularShows.map((show) => <TvShowCard show={show} />)}
      </div>
    </div>
    <!-- end popular-tv -->

    <div class="top-rated-shows py-24">
      <h2 class="text-lg font-semibold uppercase tracking-wider text-orange-500">
        Top Rated Shows
      </h2>
      <div class="grid grid-cols-1 gap-8 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-5">
        {topRated.map((show) => <TvShowCard show={show} />)}
      </div>
    </div>
    <!-- end top-rated-shows -->
  </div>
</main>
